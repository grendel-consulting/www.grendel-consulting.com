---
import Breadcrumbs from "@components/molecules/Breadcrumbs.astro";
import Footer from "@components/organisms/Footer.astro";
import Header from "@components/organisms/Header.astro";
import "../assets/site.css";

const { frontmatter } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
import { BUSINESS } from "@references/business";
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
    <meta name="description" content={frontmatter.description} />
    <link rel="canonical" href={canonicalURL} />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:description" content={frontmatter.description} />
    <meta property="og:site_name" content={BUSINESS.SHORT_NAME} />
    <meta property="og:image" content="/favicon.svg" />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />

    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="prose md:prose-lg lg:prose-xl max-w-none">
    <Header />
    <main class="p-10">
      <h1>{frontmatter.title}</h1>
      <Breadcrumbs />
      <slot />
    </main>
    <Footer />
  </body>
</html>
